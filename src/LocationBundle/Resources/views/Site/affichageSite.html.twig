{% extends 'baseback.html.twig' %}

{% block body %}
<center><h2> Liste des sites</h2></center>

<table Border="1" class="table table-striped table-bordered display no-wrap">
    <tr>
        <th>id</th>
        <th>emplacement</th>
        <th>longitude</th>
        <th>latitude</th>
    </tr>

    {% for s in site %}
        <tr>
            <td>{{ s.id }}</td>
            <td>{{ s.emplacement }}</td>
            <td>{{ s.longitude }}</td>
            <td>{{ s.latitude }}</td>
            <td>
                <div class="row">
                <button type="button" class="btn waves-effect waves-light btn-outline-info">
                    <a href="{{ path('location_site_delete', { 'id': s.id }) }}">delete</a>
                </button>
                </div>
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}