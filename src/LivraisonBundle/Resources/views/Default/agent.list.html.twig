{% extends 'baseback.html.twig' %}
{% block title_page %}Liste des Agent
{% endblock %}
{% block small_title %}liste
{% endblock %}

{% block body %}
{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
      
	<!-- order table -->
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">

					<div class="table-responsive">
						<table id="default_order" class="table table-striped table-bordered display no-wrap" style="width:100%">
							<thead>
								<tr>
									<th>#ID</th>
									<th>Nom Complet</th>
								
									<th>Date Inscription</th>
									<th>Action</th>

								</tr>
							</thead>
							<tbody>
								{% for item in agents %}
									<tr>
										<td>
											<a href="{{ path('agent_view', { 'id': item.id }) }}">{{ item.id }}</td>
										</td>
										<td>{{ item.nomComplet }}</td>
									
										
										<td>{{ item.dateCreation|date('Y-m-d H:i:s') }}</td>
										<td>
											<div class)"row">
                                            <button type="button" class="btn waves-effect waves-light btn-outline-info">
													<a href="{{ path('agent_view', { 'id': item.id }) }}">view</a>
												</button>
												<button type="button" class="btn waves-effect waves-light btn-outline-info">
													<a href="{{ path('agent_delete', { 'id': item.id }) }}">delete</a>
												</button>
											</div>
										</td>
									</tr>

								{% endfor %}
							</tbody>
							<tfoot>
								<tr>
									<th>#ID</th>
									<th>Nom Complet</th>
							
									<th>Date Inscription</th>
									<th>Action</th>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}
