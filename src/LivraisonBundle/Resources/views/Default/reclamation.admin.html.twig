{% extends 'baseback.html.twig' %}
{% block title_page %}Réclamations
{% endblock %}
{% block small_title %}Liste des Réclamations
{% endblock %}

{% block body %}

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- order table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">
                        <table id="default_order" class="table table-striped table-bordered display no-wrap" style="width:100%">
                            <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Titre</th>
                                <th>Sujet</th>
                                <th>Agent_Id</th>
                                <th>Agent_Email</th>
                                <th>Date Creation</th>
                                <th>Action</th>

                            </tr>
                            </thead>
                            <tbody>

                            {% for item in tache %}
                            <tr>
                                <td>
                                    <a href="{{ path('livraison_view', { 'id': item.id }) }}">{{ item.id }}</td>
                                </td>
                                <td>{{ item.titre }}</td>
                                <td>{{ item.sujet }}</td>

                                <td><a href="{{ path('agent_view', { 'id': item.agent.id }) }}">{{ item.agent.id }}</a></td>
                                <td>{{ item.agent.email }}</td>

                                <td>{{ item.dateCreation|date('Y-m-d H:i:s') }}</td>

                                <td>
                                    <div class="row">

                                    <button type="button" class="btn waves-effect waves-light btn-outline-info">
                                        <a href="{{ path('reclamation_delete', { 'id': item.id }) }}">delete</a>
                                    </button>
                                    </div>
                                 </td>
                    </tr>

                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>#ID</th>
                        <th>Titre</th>
                        <th>Sujet</th>
                        <th>Agent_Id</th>
                        <th>Date Creation</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}
