{% extends 'baseback.html.twig' %}

{% block body %}
    <h1>Evenement edit</h1>
    <ul>
        <li>
            <a href="{{ path('evenements_index') }}" class="btn btn-primary">Back to the list</a>
        </li>

    </ul>
    {{ form_start(edit_form) }}
    <div class="form-group row align-items-center">
        <label class="col-3">Nom evenement</label>
        {{ form_widget(edit_form.nom_evenements, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">nombre participant</label>
        {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">date evenement</label>
        {{ form_widget(edit_form.dateeve, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">date debut</label>
        {{ form_widget(edit_form.datedebut, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">date fin</label>
        {{ form_widget(edit_form.datefin, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">lieux evenement</label>
        {{ form_widget(edit_form.lieuxeve, {'attr': {'class': 'form-control col'}}) }}
    </div>
    <div class="form-group row align-items-center">
        <label class="col-3">descreption du evenements</label>
        {{ form_widget(edit_form.descreptioneve, {'attr': {'class': 'form-control col'}}) }}
    </div>
        <input type="submit" value="Edit" class="btn btn-primary"/>
    {{ form_end(edit_form) }}


{% endblock %}
