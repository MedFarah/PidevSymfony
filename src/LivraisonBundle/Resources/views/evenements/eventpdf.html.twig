
{% block body %}

    <h4>liste des evenements</h4>
    <div class="table-responsive">
        <table id="zero_config" class="table table-striped table-bordered no-wrap">
            <thead>


            <tr>
                <th scope="col">Nom_evenements</th>


                <th scope="col">Nombre de participants</th>
                <th scope="col">date evenements</th>
                <th scope="col">date debut</th>
                <th scope="col">date fin</th>

                <th scope="col">Lieux evenements</th>
                <th scope="col">Descreption evenements</th>



            </tr>
            </thead>
            <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.nomevenements }}</td>
                    <td>{{ evenement.nombre }}</td>
                    <td>{% if evenement.dateeve %}{{ evenement.dateeve|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if evenement.datedebut %}{{ evenement.datedebut|date('h:m') }}{% endif %}</td>

                    <td>{% if evenement.datefin %}{{ evenement.datefin|date('h:m') }}{% endif %}</td>

                    <td>{{ evenement.lieuxeve }}</td>
                    <td>{{ evenement.descreptioneve }}</td>

                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>




{% endblock %}
